extends ../layouts/common.pug

block content
    h1 #{pageName}
    if errors
        each error in errors
            .alert.alert-warning= error

    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email: 
            input#email.form-control(type="email", name="email", class="ml-2", value = value ? value.email : "")
        .form-group
            label(for="password") Password: 
            input#password.form-control(type="password", name="password", class="ml-2", value = value ? value.password : "")
        button(class="btn btn-primary ml-2") Login