extends ../layouts/common.pug

block content
    h1 #{pageName}
    if errors
        each error in errors
            .alert.alert-warning= error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name: 
            input#name.form-control(type="text", name="name", class="ml-2", value = value ? value.name : "")
        .form-group
            label(for="phone") Phone: 
            input#phone.form-control(type="text", name="phone", class="ml-2", value = value ? value.phone : "")
        .form-group
            label(for="email") Email: 
            input#email.form-control(type="email", name="email", class="ml-2", value = value ? value.email : "")
        .form-group
            label(for="password") Password: 
            input#password.form-control(type="password", name="password", class="ml-2", value = value ? value.password : "")
        .form-group
            label(for="avatar") Avatar: 
            input#avatar.form-control-file(type="file", name="avatar", class="ml-2")
        button(class="btn btn-primary ml-2") Create