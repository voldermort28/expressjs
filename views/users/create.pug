extends ../layouts/common.pug

block content
    h1 #{pageName}
    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name: 
            input#name.form-control(type="text", name="name", class="ml-2")
        .form-group
            label(for="phone") Phone: 
            input#phone.form-control(type="text", name="phone", class="ml-2")
        .form-group
            label(for="email") Email: 
            input#email.form-control(type="email", name="email", class="ml-2")
        .form-group
            label(for="password") Password: 
            input#password.form-control(type="password", name="password", class="ml-2")
        button(class="btn btn-primary ml-2") Create