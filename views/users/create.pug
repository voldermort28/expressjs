extends ../layouts/common.pug

block content
    h1 #{pageName}
    if errors
        each error in errors
            .alert.alert-warning= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name: 
            input#name.form-control(type="text", name="name", class="ml-2", value = value ? value.name : "")
        .form-group
            label(for="phone") Phone: 
            input#phone.form-control(type="text", name="phone", class="ml-2", value = value ? value.phone : "")
        button(class="btn btn-primary ml-2") Create